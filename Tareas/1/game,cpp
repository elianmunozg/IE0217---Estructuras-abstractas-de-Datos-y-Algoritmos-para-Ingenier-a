#include "Game.hpp"
#include <iostream>
#include <string>

/**
 * @file Game.cpp
 * @brief Implementación de la clase Game para el juego de adivinanzas.
 */

Game::Game() {
    // Inicialización de variables y estado del juego
}

void Game::run() {
    int choice = 0;
    do {
        std::cout << "Menú del Juego de Adivinanzas\n";
        std::cout << "1. Iniciar Juego\n";
        std::cout << "2. Elegir Intervalo\n";
        std::cout << "3. Salir\n";
        std::cout << "Selecciona una opción: ";
        std::cin >> choice;

        switch (choice) {
            case 1:
                startGame();
                break;
            case 2:
                chooseInterval();
                break;
            case 3:
                std::cout << "Gracias por jugar. ¡Hasta luego!\n";
                break;
            default:
                std::cout << "Opción no válida. Inténtalo de nuevo.\n";
        }
    } while (choice != 3);
}

